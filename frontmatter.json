{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": true,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Show Table of Contents",
          "name": "showTableOfContents",
          "type": "boolean"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "show recent content",
          "name": "showRecent",
          "type": "boolean"
        },
        {
          "title": "Show related content",
          "name": "showRelatedContent",
          "type": "boolean"
        },
        {
          "title": "Number of related posts to show",
          "name": "relatedContentLimit",
          "type": "number"
        },
        {
          "title": "showDate",
          "name": "showDate",
          "type": "boolean"
        },
        {
          "title": "Only show category tag (don't use with taxonomies)",
          "name": "showCategoryOnly",
          "type": "boolean"
        },
        {
          "title": "Only show taxonomy tag (don't use with categories)",
          "name": "showTaxonomies",
          "type": "boolean"
        },
        {
          "title": "Show hero image",
          "name": "showHero",
          "type": "boolean"
        },
        {
          "title": "Hero style",
          "name": "heroStyle",
          "type": "string"
        },
        {
          "title": "Page layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "Card view (only valid if page layout = card)",
          "name": "cardview",
          "type": "boolean"
        },
        {
          "title": "Blur layout background (for background hero types)",
          "name": "layoutBackgroundBlur",
          "type": "boolean"
        },
        {
          "title": "Add header space (for background hero types)",
          "name": "layoutBackgroundHeaderSpace",
          "type": "boolean"
        },
        {
          "title": "Show reading time",
          "name": "showReadingTime",
          "type": "boolean"
        },
        {
          "title": "Show word count",
          "name": "showWordCount",
          "type": "boolean"
        },
        {
          "title": "Show view count",
          "name": "showViews",
          "type": "boolean"
        },
        {
          "title": "Show like count",
          "name": "showLikes",
          "type": "boolean"
        },
        {
          "title": "Show date only inside article",
          "name": "showDateOnlyInArticle",
          "type": "boolean"
        },
        {
          "title": "Show date updated",
          "name": "showDateUpdated",
          "type": "boolean"
        },
        {
          "title": "Show breadcrumbs",
          "name": "showBreadcrumbs",
          "type": "boolean"
        },
        {
          "title": "Expand series list by default",
          "name": "seriesOpened",
          "type": "boolean"
        },
        {
          "title": "Show heading anchors",
          "name": "showHeadingAnchors",
          "type": "boolean"
        },
        {
          "title": "Show pagination arrows",
          "name": "showPagination",
          "type": "boolean"
        },
        {
          "title": "Invert pagination arrow direction",
          "name": "invertPagination",
          "type": "boolean"
        },

        {
          "title": "Show author badges",
          "name": "showAuthorsBadges",
          "type": "boolean"
        },
        {
          "title": "Show author",
          "name": "showAuthor",
          "type": "boolean"
        },
        {
          "title": "Show author at the bottom",
          "name": "showAuthorBottom",
          "type": "boolean"
        },
        {
          "title": "Exclude article from search",
          "name": "excludeFromSearch",
          "type": "boolean"
        },
        {
          "title": "Social sharing links",
          "name": "sharingLinks",
          "type": "string"
        },
        {
          "title": "Reply by email button",
          "name": "replybyemail",
          "type": "boolean"
        },
        {
          "title": "Enable Zen mode",
          "name": "showZenMode",
          "type": "boolean"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "content",
      "path": "[[workspace]]/content"
    },
    {
      "title": "posts",
      "path": "[[workspace]]/content/posts"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.content.snippets": {
    "Button": {
      "description": "A simple button",
      "body": [
        "{{< button href=[[URL]] target=\"_self\" >}}",
        "{{< icon \"[[icon]]\" >}} [[text]]",
        "{{< /button >}}"
      ],
      "fields": [
        {
          "name": "URL",
          "title": "URL",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "icon",
          "title": "icon",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "text",
          "title": "text",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Article List": {
      "description": "A list of recent articles",
      "body": "{{< list title=\"[[Title]]\" cardView=[[Display card]] limit=[[Limit of articles]] where=\"[[where]]\" value=\"[[value]]\" >}}",
      "fields": [
        {
          "name": "Title",
          "title": "Title",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "Display card",
          "title": "Display card",
          "type": "choice",
          "default": "",
          "choices": [
            "true",
            "false"
          ]
        },
        {
          "name": "Limit of articles",
          "title": "Limit of articles",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "where",
          "title": "where",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "value",
          "title": "value",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Icon": {
      "description": "Add an icon",
      "body": "{{< icon \"[[icon]]\" >}} [[text]]",
      "fields": [
        {
          "name": "icon",
          "title": "icon",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "text",
          "title": "text",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Socials plug": {
      "description": "A list of my socials",
      "body": [
        "## Socials",
        "",
        "",
        "- {{< icon \"Instagram\" >}} [adriandelima.music](https://www.instagram.com/adriandelima.music)",
        "- {{< icon \"youtube\" >}} [@AdriandelimaMusic](https://www.youtube.com/@AdriandelimaMusic)"
      ],
      "fields": []
    },
    "Image": {
      "description": "Add an image",
      "body": [
        "{{< figure",
        "    src=\"image_source.jpg\"",
        "    alt=\"Alt text\"",
        "    caption=\"Photo by [Jr Korpa](https://unsplash.com/@jrkorpa) on [Unsplash](https://unsplash.com/)\"",
        "    >}}",
        "",
        ""
      ],
      "fields": []
    },
    "Carousel": {
      "description": "image carousel. Gallery should be inside article folder",
      "body": "{{< carousel images=\"gallery/*\" aspectRatio=\"12-9\" interval=\"2000\" >}}",
      "fields": []
    },
    "Invisible heading": {
      "description": "create an invisible heading, just for the table of contents",
      "body": [
        "<div class=\"toc-only\">",
        "",
        "## Heading name here",
        "",
        "</div>"
      ],
      "fields": []
    }
  },
  "frontMatter.website.host": "https://adriandelima.github.io/",
  "frontMatter.dashboard.openOnStart": true
}