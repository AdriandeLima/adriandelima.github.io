{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "replybyemail",
          "name": "replybyemail",
          "type": "boolean"
        },
        {
          "title": "showRecent",
          "name": "showRecent",
          "type": "boolean"
        },
        {
          "title": "layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "cardview",
          "name": "cardview",
          "type": "boolean"
        },
        {
          "title": "showDate",
          "name": "showDate",
          "type": "boolean"
        },
        {
          "title": "showAuthor",
          "name": "showAuthor",
          "type": "boolean"
        },
        {
          "title": "showAuthorBottom",
          "name": "showAuthorBottom",
          "type": "boolean"
        },
        {
          "title": "showHero",
          "name": "showHero",
          "type": "boolean"
        },
        {
          "title": "heroStyle",
          "name": "heroStyle",
          "type": "string"
        },
        {
          "title": "showReadingTime",
          "name": "showReadingTime",
          "type": "boolean"
        },
        {
          "title": "showWordCount",
          "name": "showWordCount",
          "type": "boolean"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "content",
      "path": "[[workspace]]/content"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.content.snippets": {
    "Button": {
      "description": "A simple button",
      "body": [
        "{{< button href=[[URL]] target=\"_self\" >}}",
        "{{< icon \"[[icon]]\" >}} [[text]]",
        "{{< /button >}}"
      ],
      "fields": [
        {
          "name": "URL",
          "title": "URL",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "icon",
          "title": "icon",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "text",
          "title": "text",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Article List": {
      "description": "A list of recent articles",
      "body": "{{< list title=\"[[Title]]\" cardView=[[Display card]] limit=[[Limit of articles]] where=\"[[where]]\" value=\"[[value]]\" >}}",
      "fields": [
        {
          "name": "Title",
          "title": "Title",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "Display card",
          "title": "Display card",
          "type": "choice",
          "default": "",
          "choices": [
            "true",
            "false"
          ]
        },
        {
          "name": "Limit of articles",
          "title": "Limit of articles",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "where",
          "title": "where",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "value",
          "title": "value",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    }
  }
}